pipeline {	
	agent any	
    
    tools {	    
		maven 'my-maven'		
		jdk 'my-jdk'	
	}	
	stages {        
		stage('Git'){			
			steps {git url:'https://github.com/Visweshvar-UST/jenkins-microservices', branch:'config-server'}			
            }		
		stage('Build'){			
			steps {bat "mvn clean install -DskipTests"}		
		}		
		stage('Test'){			
			steps{bat "mvn test"}		
            }		
		stage('Deploy') {			
			steps { bat "docker build -t config-server-image ."			    
			        bat "docker run -p 8088:8088 -d --network app-network --name config-sr config-server-image"}		
		}	
    }
}