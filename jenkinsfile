pipeline {	
	agent any	
    
    tools {	    
		maven 'my-maven'		
		jdk 'my-jdk'	
	}	
	stages {        
		stage('Git'){			
			steps {git url:'https://github.com/Visweshvar-UST/jenkins-microservices', branch:'employee-s1'}			
            }		
		stage('Build'){			
			steps {bat "mvn clean install -DskipTests"}		
		}		
		stage('Test'){			
			steps{bat "mvn test"}		
            }		
		stage('Deploy') {			
			steps { bat "docker build -t employee-s1-image ."			    
			        bat "docker run -p 8082:8082 -d --name employee-s1-container employee-s1-image"}		
		}	
    }
}