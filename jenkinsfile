pipeline {	
	agent any	
    
    tools {	    
		maven 'my-maven'		
		jdk 'my-jdk'	
	}	
	stages {        
		stage('Git'){			
			steps {git url:'https://github.com/Visweshvar-UST/jenkins-microservices', branch:'authentication-service'}			
            }		
		stage('Build'){			
			steps {bat "mvn clean install -DskipTests"}		
		}		
		stage('Test'){			
			steps{bat "mvn test"}		
            }		
		stage('Deploy') {			
			steps { bat "docker build -t authentication-service-image ."			    
			        bat "docker run -p 8090:8090 -d --name authentication-service-container authentication-service-image"}		
		}	
    }
}